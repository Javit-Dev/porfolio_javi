---
import GithubIcon from '../components/icons/socials/GithubIcon.astro';

interface Props{
  title: string;
  description: string;
  image: string;
  tags: string[];
  link?: string;
  github?: string;
}
const { title, description, image, tags, link, github } = Astro.props;
---
<article class="grid grid-cols-1 md:grid-cols-2 gap-6 w-full h-full items-center justify-center border border-white/10 rounded-2xl p-6 bg-gradient-to-b from-white/5 to-white/2 hover:from-white/10 hover:to-white/5 transition">
  <img src={image} alt={title} class="rounded-lg w-full h-64 object-cover" loading="lazy" decoding="async"/>
  <div class="flex flex-col gap-2">
    <h1 class="text-3xl font-semibold">{title}</h1>
    <p class="text-white/80">{description}</p>
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="bg-white/10 text-sm text-white/80 px-2 py-1 rounded-full">{tag}</span>
      ))}
    </div>
      <div class=" flex gap-4 mt-2">
        {link && (
          <a href={link} target="_blank" class="text-blue-500 hover:underline">Ver proyecto</a>
        )}
        {github && (
          <a href={github} target="_blank" class="flex flex-row gap-2 justify-center items-center bg-white/5 border border-white/10 rounded-xl px-3 py-2 hover:bg-white/15 transition">
            <GithubIcon/>Ver c√≥digo</a>
        )}
      </div>
  </div>
</article>